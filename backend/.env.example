# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Auth: same value as frontend NEXTAUTH_SECRET (so backend can verify JWTs)
NEXTAUTH_SECRET=

# GenAI for inbound chat (use one of)
GEMINI_API_KEY=
OPENAI_API_KEY=
# OPENAI_CHAT_MODEL=gpt-4o-mini

# ElevenLabs API (TTS and Conversational AI)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
# For multi-turn outbound calls: set agent ID and phone number ID from ElevenLabs dashboard.
# If you get "document_not_found" (404): the phone number ID is wrong or deleted — open ElevenLabs → Phone Numbers, copy the ID of the number you use for outbound.
ELEVENLABS_AGENT_ID=
ELEVENLABS_AGENT_PHONE_NUMBER_ID=
# Post-call webhook: create a webhook in ElevenLabs Agents settings with URL https://your-domain.com/api/webhooks/elevenlabs.
# Set the same secret here to verify requests. Leave empty (or set ELEVENLABS_WEBHOOK_SKIP_VERIFY=true) to accept webhooks without verification (e.g. local ngrok testing).
ELEVENLABS_WEBHOOK_SECRET=
# Set to true to skip HMAC verification (useful when ElevenLabs signature format doesn't match or for local testing).
# ELEVENLABS_WEBHOOK_SKIP_VERIFY=false

# Google APIs
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio Configuration (for phone calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
# Number to actually dial (e.g. your phone for testing). If USE_TEST_NUMBER=true, all calls go here.
TEST_CALL_NUMBER=+1234567890
# Second provider number (so 2 concurrent calls can connect). Defaults to +16173884716 if unset.
TEST_CALL_NUMBER_2=+16173884716
# Public URL for Twilio webhooks (e.g. https://xxx.ngrok.io). Required for multi-turn calls.
TWILIO_WEBHOOK_BASE_URL=
# Set to true to make real Twilio calls; false for mock results only.
USE_REAL_CALLS=false

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Waitlist (dev/gated): only emails in allowed_emails can access protected routes. Add emails via admin API.
# WAITLIST_MODE=true
# ADMIN_SECRET=your-admin-secret
# Resend: send confirmation email when user joins waitlist (optional)
# RESEND_API_KEY=
# WAITLIST_FROM_EMAIL=noreply@yourdomain.com
